<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="com.github.bbva.logsReader.*" />

	<context:property-placeholder
		location="classpath:spring//properties//config.properties" />

	<bean id="crudBean" class="com.github.bbva.logsReader.db.CRUD"
		init-method="init" />

	<bean id="fileUtilsBean" class="com.github.bbva.logsReader.utils.FilesUtils"
		init-method="init" />

	<bean id="runMeTask" destroy-method="destroy" class="com.github.bbva.logsReader.utils.Daemon"  />

	<bean id="runMeJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">

		<property name="targetObject" ref="runMeTask" />
		<property name="targetMethod" value="task" />

	</bean>

	<!-- Simple Trigger, run every 5 seconds -->
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="runMeJob" />
		<property name="repeatInterval" value="30000" />
		<property name="startDelay" value="1000" />
	</bean>


	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="runMeJob" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="simpleTrigger" />
			</list>
		</property>
	</bean>


	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource" />



</beans>